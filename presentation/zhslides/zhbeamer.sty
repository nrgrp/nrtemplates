\geometry{papersize={6.29in, 4.86in}}
\usefonttheme[onlymath]{serif}
\setbeamercolor{structure}{fg=black}
\setbeamertemplate{navigation symbols}{}

% \definecolor{zhcolor}{RGB}{140, 21, 21}
\definecolor{zhcolor}{RGB}{0, 0, 0}

% title page
\setbeamertemplate{title page}{
    \begin{center}
        \begin{beamercolorbox}{structure}
            \centering\color{zhcolor}{\LARGE\bfseries\inserttitle}\\[0.5ex]{\insertsubtitle}
        \end{beamercolorbox}
        \vspace*{0.8cm}\par
        \insertauthor\vspace*{0.5cm}\par
        \insertinstitute\vspace*{0.5cm}\par
        \insertdate
    \end{center}
}

% footer
\newcommand\footlineon{
    \setbeamertemplate{footline}{
        \begin{beamercolorbox}[ht=2.5ex,dp=1.125ex,leftskip=0.55cm,rightskip=0.55cm]{structure}
            \color{zhcolor}\scriptsize\insertsection\hfill\insertframenumber
        \end{beamercolorbox}
        \vskip 0.45cm
    }
}

% frame title
% default (center)
\setbeamertemplate{frametitle}{
    \vspace*{0.8cm}
    \begin{beamercolorbox}{structure}
        \centering\color{zhcolor}{\bfseries\Large\insertframetitle}
    \end{beamercolorbox}
    \vspace*{-0.9ex}
    \begin{beamercolorbox}{structure}
        \centering\color{zhcolor}{\footnotesize\insertframesubtitle}
    \end{beamercolorbox}
}
% left aligned
\newcommand\frametitleleft{
    \setbeamertemplate{frametitle}{
        \vspace*{0.8cm}
        \begin{beamercolorbox}[leftskip=-0.45cm]{structure}
            \color{zhcolor}{\bfseries\Large\insertframetitle}
        \end{beamercolorbox}
        \vspace*{-0.9ex}
        \begin{beamercolorbox}[leftskip=-0.45cm]{structure}
            \color{zhcolor}{\footnotesize\insertframesubtitle}
        \end{beamercolorbox}}
}

% itemize
\setbeamertemplate{itemize item}{\textbullet}
\setbeamertemplate{itemize subitem}{--}

% bibliography
\bibliographystyle{alpha}
\setbeamertemplate{bibliography item}{\insertbiblabel}
% put bibliography entries in one line
\newcommand\onelinebib{
    \setbeamertemplate{bibliography entry title}{}
    \setbeamertemplate{bibliography entry location}{}
    \setbeamertemplate{bibliography entry note}{}
}

% outline
\setbeamertemplate{section in toc}{\color{zhcolor}\quad\inserttocsection}
\newcommand\sectionoutlineon{
    \AtBeginSection{
        \begin{frame}
            \frametitle{Outline}
            \tableofcontents[currentsection, subsectionstyle=hide, subsubsectionstyle=hide]
        \end{frame}
    }
}

% array stretch (for structuring optimization problems)
\renewcommand{\arraystretch}{1.2}
